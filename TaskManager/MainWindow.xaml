<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <DataGrid x:Name="processesGrid" AutoGenerateColumns="True" ItemsSource="{Binding Path=processes}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Path=Name}" Width="100" />
                <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}" Width="50" />
                <DataGridTextColumn Header="Состояние" Binding="{Binding Path=Condition}" Width="100" />
                <DataGridTextColumn Header="Имя пользователя" Binding="{Binding Path=UserName}" Width="100" />
                <DataGridTextColumn Header="Память" Binding="{Binding Path=Memory}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
